[Unit]
Description=JBoss EAP host controller
Wants=network-online.target 
After=network-online.target

[Container]
ContainerName=secondary-host-controller
PublishPort=8080:8080
Image=quay.io/jdenise/my-host-controller:1.0
Environment=SERVER_ARGS="--host-config=my-host.xml -Djboss.domain.primary.address=10.0.2.2"
Environment=JAVA_MAX_MEM_RATIO=25
Environment=CLI_GRACEFUL_SHUTDOWN=true
AutoUpdate=registry

[Install]
WantedBy=default.target